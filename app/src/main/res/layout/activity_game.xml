<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F4F6F8">

    <!-- Opponent's Choice -->
    <TextView
        android:id="@+id/opponentChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Opponent: Waiting..."
        android:textSize="18sp"
        android:textColor="#344955"
        android:layout_marginTop="32dp"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:backgroundTint="#FFFFFF" />

    <!-- Scoreboard -->
    <TextView
        android:id="@+id/scoreBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Score: You 0 - 0 Opponent"
        android:textSize="16sp"
        android:textColor="#344955"
        android:layout_below="@id/opponentChoice"
        android:layout_marginTop="70dp"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:backgroundTint="#FFFFFF" />

    <!-- Player Choices -->
    <LinearLayout
        android:id="@+id/playerChoices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp">

        <!-- Rock Button -->
        <ImageButton
            android:id="@+id/btnRock"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rock"
            android:background="@drawable/rounded_button"
            android:scaleType="centerCrop"
            android:padding="8dp"
            android:contentDescription="@string/rock" />

        <!-- Paper Button -->

        <ImageButton
            android:id="@+id/btnPaper"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/paper"
            android:background="@drawable/rounded_button"
            android:scaleType="centerCrop"
            android:padding="8dp"
            android:layout_marginStart="24dp"
            android:contentDescription="@string/paper" />

        <!-- Scissors Button -->
        <ImageButton
            android:id="@+id/btnScissors"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/scissors"
            android:background="@drawable/rounded_button"
            android:scaleType="centerCrop"
            android:padding="8dp"
            android:layout_marginStart="24dp"
            android:contentDescription="@string/scissors" />
    </LinearLayout>

    <!-- Status Message -->
    <TextView
        android:id="@+id/gameStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/playerChoices"
        android:text="Make your move!"
        android:textSize="16sp"
        android:textColor="#344955"
        android:layout_marginBottom="100dp"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:backgroundTint="#FFFFFF"/>

</RelativeLayout>
