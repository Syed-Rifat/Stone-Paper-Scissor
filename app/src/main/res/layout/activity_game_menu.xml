<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameMenuActivity">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stone Paper Scissors Game"
        android:textSize="24sp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/offlinePlayButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Offline Play Button -->
    <Button
        android:id="@+id/offlinePlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offline Play"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toTopOf="@id/onlinePlayButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Online Play Button -->
    <Button
        android:id="@+id/onlinePlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online Play"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/offlinePlayButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
