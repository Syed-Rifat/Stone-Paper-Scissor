<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".GameMenuActivity">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stone Paper Scissors Game"
        android:background="#081b31"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Offline Play Button -->
    <Button
        android:id="@+id/offlinePlayButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Offline Play"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#4285F4"
        android:backgroundTintMode="src_in"
        android:elevation="6dp"
        android:layout_marginTop="170dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Online Play Button -->
    <Button
        android:id="@+id/onlinePlayButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Online Play"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#34A853"
        android:backgroundTintMode="src_in"
        android:elevation="6dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/offlinePlayButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
